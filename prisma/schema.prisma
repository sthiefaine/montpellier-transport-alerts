// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Alert {
  id              String    @id
  timeStart       DateTime
  timeEnd         DateTime?
  cause           String
  effect          String
  headerText      String
  descriptionText String
  url             String?
  routeIds        String?
  stopIds         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}